@model IEnumerable<Cotacao.Controllers.Cotacao>

@{
    ViewBag.Title = "Mercado";
}

<div class="container">
    <div class="row jumbotron">
        <h2>@ViewBag.Mercado</h2>
    </div>
    <div class="row">
        <a class="btn btn-primary" href="/Cotacoes/Create?mercadoId=@ViewBag.MercadoId">Nova Cotação</a>
    </div>
    <div class="col-lg-12 row">
        @foreach (var item in Model)
        {
            <div class="col-lg-2">
                <a class="btn btn-primary btn-lg btn-block dataitem" style="margin:5px" href="/Cotacoes/Details/@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Date)</a>
            </div>
        }
    </div>
    <div class="row">
        <a class="btn btn-primary" href="/Mercados">Voltar</a>
    </div>
</div>

@section Scripts {
    <script>
        $(".dataitem").mask("99/99/9999");
    </script>
}
