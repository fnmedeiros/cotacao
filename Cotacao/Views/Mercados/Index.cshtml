@model IEnumerable<Cotacao.Controllers.Mercado>

@{
    ViewBag.Title = "Mercado";
}

<div class="container">
    <div class="row jumbotron">
        <h2>Mercados</h2>
    </div>
    <div class="row">
        <a class="btn btn-primary" href="/Mercados/Create">Cadastrar</a>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a href="Mercados/Details/@Html.DisplayFor(modelItem => item.Id)">@Html.DisplayFor(modelItem => item.Nome)</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
